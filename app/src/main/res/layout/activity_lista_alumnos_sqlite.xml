<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/crema"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listado de Alumnos"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/guindo" />

    <!-- ESTADO DE CONEXIÃ“N -->
    <TextView
        android:id="@+id/tvEstadoConexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¶ Verificando conexiÃ³n..."
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/azulMarino"
        android:textColor="@color/textoClaro"/>

    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar por CI o nombre completo"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="BUSCAR"
        android:layout_marginTop="10dp"
        android:textColor="@color/textoClaro"
        android:backgroundTint="@color/azulMarino"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAlumnos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

</LinearLayout>
