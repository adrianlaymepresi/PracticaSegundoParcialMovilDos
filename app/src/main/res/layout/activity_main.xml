<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crema"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TÃTULO -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINCIPAL"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/guindo"
            android:textColor="@color/textoClaro"/>

        <!-- ESPACIO -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- FILA 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btnCrearAlumno"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="CREAR ALUMNO"
                android:textStyle="bold"
                android:textColor="@color/textoClaro"
                android:backgroundTint="@color/azulMarino"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <!-- FILA 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btnRutaDosAlumnos"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="RUTA ENTRE ALUMNOS"
                android:textColor="@color/textoClaro"
                android:backgroundTint="@color/azulMarino"
                android:layout_margin="2dp"/>
        </LinearLayout>

        <!-- FILA 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btnListaAlumnosSqlite"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="LISTA ALUMNOS SQLITE"
                android:textStyle="bold"
                android:textColor="@color/textoClaro"
                android:backgroundTint="@color/azulMarino"
                android:layout_margin="2dp"/>
        </LinearLayout>

        <!-- FILA 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btnListaAlumnosFirebase"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="LISTA ALUMNOS FIREBASE"
                android:textStyle="bold"
                android:textColor="@color/textoClaro"
                android:backgroundTint="@color/azulMarino"
                android:layout_margin="2dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
